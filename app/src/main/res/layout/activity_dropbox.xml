<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="156dp"
            android:layout_alignBottom="@+id/listView">

            <Button
                android:id="@+id/button_link_dropbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_link_dropbox"
                android:onClick="onClickLinkDropbox"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/button_refresh_link_status"
                android:layout_toStartOf="@+id/button_refresh_link_status" />

            <Button
                android:id="@+id/button_refresh_link_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_refresh_link_status"
                android:onClick="onClickRefreshLinkStatus"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textview_link_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/textview_link_status_title"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textview_link_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:text="INSERT LINK STATUS HERE"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_refresh_link_status"
                android:layout_toStartOf="@+id/button_refresh_link_status"
                android:layout_toLeftOf="@id/button_refresh_link_status"
                android:autoText="false"
                android:layout_alignRight="@+id/button_refresh_link_status"
                android:layout_alignEnd="@+id/button_refresh_link_status" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISABLED"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

</LinearLayout>
