<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|fill_vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select start time"
        android:id="@+id/textView11"
        android:layout_weight="0.00"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_startyear"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_startmonth"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_startday"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_starttime"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_countvspressure">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select end time"
            android:id="@+id/textView12"
            android:layout_weight="0.00"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_endyear"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_endmonth"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_endday"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_endtime"
                android:layout_weight="1"
                android:visibility="visible"
                android:spinnerMode="dialog" />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.09"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graph via HelloChart"
            android:onClick="onClickHelloChart"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count vs. Pressure"
            android:onClick="onClickCountvsPressure"
            android:layout_below="@+id/button_countvstime"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graph via MPAChart"
            android:onClick="onClickMPAChart"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count vs. Time"
            android:onClick="onClickCountvsTime"
            android:layout_below="@+id/button_dropbox_settings"
            android:layout_alignLeft="@+id/button_countvspressure"
            android:layout_alignStart="@+id/button_countvspressure"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="1" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22">

        <GridLayout
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="2"
            android:columnCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/choose_x_axis"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/choose_y_axis"
                android:id="@+id/textView13"
                android:layout_row="0"
                android:layout_column="2" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/x_group"
                android:onClick="onXRadioGroupClicked">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_string"
                    android:id="@+id/x_date"
                    android:onClick="onXRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count_string"
                    android:id="@+id/x_count"
                    android:onClick="onXRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_string"
                    android:id="@+id/x_temp"
                    android:onClick="onXRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pressure_string"
                    android:id="@+id/x_pres"
                    android:onClick="onXRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humidity_string"
                    android:id="@+id/x_humd"
                    android:checked="false"
                    android:onClick="onXRadioGroupClicked" />

            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="2"
                android:id="@+id/y_group"
                android:onClick="onYRadioGroupClicked">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_string"
                    android:id="@+id/y_date"
                    android:onClick="onYRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count_string"
                    android:id="@+id/y_count"
                    android:onClick="onYRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_string"
                    android:id="@+id/y_temp"
                    android:onClick="onYRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pressure_string"
                    android:id="@+id/y_pres"
                    android:onClick="onYRadioGroupClicked" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humidity_string"
                    android:id="@+id/y_humd"
                    android:checked="false"
                    android:onClick="onYRadioGroupClicked" />
            </RadioGroup>
        </GridLayout>
    </LinearLayout>


</LinearLayout>